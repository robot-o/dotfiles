[user]
	signingkey = BDBB771C6EE35DCA
[include]
  path = /home/user/.dotfiles/files/.gitconfig_delta_themes
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    syntax-theme = TwoDark
    features = chameleon
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    line-numbers = true
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
