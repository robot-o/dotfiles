[include]
  path = ~/.dotfiles/files/.gitconfig_delta_themes
  path = ~/.gitconfig-machine

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  light = false
	syntax-theme = tokyonight_night
  features = chameleon
  navigate = true
  line-numbers = true
  side-by-side = false

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[init]
  defaultBranch = main
